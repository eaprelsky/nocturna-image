# Server Configuration
NODE_ENV=development
PORT=3011
HOST=0.0.0.0
PUBLIC_URL=

# Security
# Required in production, optional in development
API_KEY=

# Puppeteer Configuration
PUPPETEER_EXECUTABLE_PATH=
MAX_CONCURRENT_RENDERS=5
RENDER_TIMEOUT=10000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true

# CORS
CORS_ORIGIN=*

# Chart Library Source
# Options: inline (default, self-contained), local, github
CHART_LIBRARY_SOURCE=inline
CHART_LIBRARY_URL=
